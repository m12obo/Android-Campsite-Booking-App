<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uws.mik.b00278705campsiteapp.InfoActivity"
    android:background="@drawable/blueskyalicdncom"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Make a Booking"
            android:id="@+id/bookingTitle"
            android:textColor="#0202ff"
            android:layout_gravity="top|center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/parkRadioGroup"
                android:measureWithLargestChild="true">

                <RadioButton
                    android:layout_width="187dp"
                    android:layout_height="26dp"
                    android:text="Loch Brannoch Park"
                    android:id="@+id/park1RadioButton"
                    android:textColor="#0202ff"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="172dp"
                    android:layout_height="26dp"
                    android:text="Lothianside Park"
                    android:id="@+id/park2RadioButton"
                    android:textColor="#0202ff"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:text="McKeowns Park"
                    android:id="@+id/park3RadioButton"
                    android:textColor="#0202ff"
                    android:checked="false" />
            </RadioGroup>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/parkImage"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/accomRadioGroup"
                android:measureWithLargestChild="false">

                <RadioButton
                    android:layout_width="173dp"
                    android:layout_height="26dp"
                    android:text="Caravan"
                    android:id="@+id/caravanRadioButton"
                    android:textColor="#0202ff"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:text="Cabin"
                    android:id="@+id/cabinRadioButton"
                    android:textColor="#0202ff"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:text="Tent"
                    android:id="@+id/tentRadioButton"
                    android:textColor="#0202ff"
                    android:layout_gravity="bottom"
                    android:checked="false" />
            </RadioGroup>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/accomImage"
                android:scaleType="fitXY"
                android:longClickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select Sleeping Capacity :       "
                android:id="@+id/textView7"
                android:layout_gravity="center"
                android:textColor="#0202ff"
                android:textSize="15dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/sleepingCapSpinner"
                android:textColor="#0202ff"
                android:layout_gravity="top|center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:weightSum="1"
            android:layout_weight="0.23">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            Date From"
                android:id="@+id/textView9"
                android:layout_weight="0.63"
                android:textColor="#0202ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date To"
                android:id="@+id/textView10"
                android:layout_weight="0.54"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <DatePicker
                android:id="@+id/fromDatePicker"
                android:calendarViewShown="false"
                android:layout_height="150dp"
                android:layout_width="wrap_content"
                android:scaleX="0.80"
                android:scaleY="0.80"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="-50dp"
                android:layout_marginBottom="-30dp"
                android:textColor="#0202ff"
                android:spinnersShown="true" />

            <DatePicker
                android:id="@+id/toDatePicker"
                android:calendarViewShown="false"
                android:layout_height="150dp"
                android:layout_width="wrap_content"
                android:textColor="#0202ff"
                android:scaleX="0.80"
                android:scaleY="0.80"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="-50dp"
                android:layout_marginBottom="-30dp"
                android:spinnersShown="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:weightSum="1">

            <CheckBox
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:text="one member over 21?"
                android:id="@+id/over21CheckBox"
                android:checked="false"
                android:textColor="#0202ff"
                android:textSize="13dp"
                android:layout_weight="1.27" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you bringing pets?"
                android:id="@+id/petCheckBox"
                android:textColor="#0202ff"
                android:checked="false"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:weightSum="1"
            android:layout_weight="0.06">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text="Number of Adults"
                        android:id="@+id/textView17"
                        android:textColor="#0202ff"
                        android:phoneNumber="true"
                        android:layout_weight="0.36" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2.10" />

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="29dp"
                        android:text="How many under 16s:"
                        android:id="@+id/under16Text"
                        android:textColor="#0202ff"
                        android:textSize="13dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="1">

                    <Space
                        android:layout_width="59dp"
                        android:layout_height="59dp" />

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="35dp"
                        android:text="How many under 5s :"
                        android:id="@+id/textView24"
                        android:textColor="#0202ff"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numOfAdultsEditText"
                android:textColor="#0202ff"
                android:textSize="13dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.39" />

            <EditText
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/under16EditText"
                android:textColor="#0202ff"
                android:textSize="13dp"
                android:text="0" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.37" />

            <EditText
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/under5EditText"
                android:textColor="#0202ff"
                android:textSize="13dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.48">

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="&lt; Go Back"
                android:id="@+id/goBackButton"
                android:textColor="#0202ff" />

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Continue &amp; Pay >"
                android:id="@+id/contPayButton"
                android:textColor="#0202ff"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="bottom"
        android:layout_weight="1" />

</LinearLayout>

