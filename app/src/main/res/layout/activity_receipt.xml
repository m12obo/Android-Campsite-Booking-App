<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uws.mik.b00278705campsiteapp.ReceiptActivity"
    android:background="@drawable/blueskyalicdncom"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thank you for your booking"
            android:id="@+id/textView21"
            android:layout_gravity="center"
            android:textColor="#0202ff"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mr ........."
            android:id="@+id/nameText"
            android:layout_gravity="center"
            android:layout_weight="0.09"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Booking has been received and processed."
            android:id="@+id/textView22"
            android:textSize="15dp"
            android:layout_weight="0.18"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park"
            android:id="@+id/parkView"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acoom"
            android:id="@+id/accomView"
            android:layout_gravity="left|center"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleeping capacity"
            android:id="@+id/sleepingCapView"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.04"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FromDate"
            android:id="@+id/fromDateView"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Date"
            android:id="@+id/toDateView"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of nights"
            android:id="@+id/numOfNightsView"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.04"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under 16"
            android:id="@+id/under16View"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.04"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under 5"
            android:id="@+id/under5View"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.04"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="disabled"
            android:id="@+id/disabledView"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pets"
            android:id="@+id/petView"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paid with card "
            android:id="@+id/cardView"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TotalPaid"
            android:id="@+id/totalView"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/emailView"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phoneNumber"
            android:id="@+id/phoneNumText"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.20"
            android:textColor="#0202ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We look forward to seeing you on."
            android:id="@+id/outroView"
            android:layout_weight="0.26"
            android:textColor="#0202ff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:text="Leave Page"
                android:id="@+id/leavePageButton"
                android:layout_gravity="center"
                android:textColor="#0202ff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
