<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uws.mik.b00278705campsiteapp.PayActivity"
    android:background="@drawable/blueskyalicdncom">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Details &amp; Payment"
                android:id="@+id/textView8"
                android:layout_weight="0.18"
                android:layout_gravity="center_horizontal"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.12">

        </LinearLayout>

        <TextView
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:text="Please Complete The Form Below"
            android:id="@+id/textView20"
            android:textColor="#0202ff"
            android:layout_weight="0.10" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.17">

            <TextView
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:text="Full Name :"
                android:id="@+id/textView14"
                android:textColor="#0202ff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameText"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.21">

            <TextView
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:text="Phone Number :"
                android:id="@+id/textView15"
                android:layout_gravity="right"
                android:textColor="#0202ff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phoneText"
                android:layout_weight="1"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08">

            <TextView
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:text="Email Address :"
                android:id="@+id/textView16"
                android:textColor="#0202ff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailText"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:weightSum="1"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:id="@+id/visaButton"
                android:layout_weight="0.14"
                android:longClickable="false"
                android:src="@drawable/visa"
                android:scaleType="centerCrop" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.14" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:id="@+id/mastercardButton"
                android:layout_weight="0.14"
                android:src="@drawable/mastercard"
                android:scaleType="centerCrop" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.14" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:id="@+id/amexButton"
                android:layout_weight="0.14"
                android:layout_gravity="top|center"
                android:src="@drawable/amex"
                android:scaleType="centerCrop" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.14" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:id="@+id/paypalButton"
                android:layout_weight="0.14"
                android:src="@drawable/paypal"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06">

            <TextView
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:text="Card Number :"
                android:id="@+id/textView18"
                android:textColor="#0202ff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/cardNumberText"
                android:layout_weight="1"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27">

            <TextView
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:text="CVV number :"
                android:id="@+id/textView19"
                android:layout_gravity="left|center_vertical"
                android:textColor="#0202ff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/cvvText"
                android:layout_weight="1"
                android:textColor="#0202ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&lt; Go Back"
                android:id="@+id/goBackbuttonPay"
                android:textColor="#0202ff"
                android:layout_weight="0.94" />

            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="Pay Now > "
                android:id="@+id/payNowButton"
                android:textColor="#0202ff" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
